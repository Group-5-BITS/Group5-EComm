pipeline {
    agent any

    environment {
        NODEJS_HOME = tool 'node'
        NPM_HOME = sh(script: 'npm config get prefix', returnStdout: true).trim()
        PATH = "${NODEJS_HOME}/bin:${NPM_HOME}/bin:${PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout your repository
                checkout scm
            }
        }

        stage('Build Backend') {
            steps {
                dir('backend') {
                    // Build Nest.js backend
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir('client') {
                    // Build Vue.js + Vite frontend
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }

        stage('Run Tests') {
            parallel {
                stage('Test in Firefox') {
                    steps {
                        dir('client') {
                            // Run Nightwatch tests in Firefox
                            sh 'npm install'
                            sh 'npm run test:firefox'
                        }
                    }
                }
                stage('Test in Chrome') {
                    steps {
                        dir('client') {
                            // Run Nightwatch tests in Chrome
                            sh 'npm install'
                            sh 'npm run test:chrome'
                        }
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                sh 'pwd'
            }
        }
    }
}
